{
  "name": "Docker NodeJS",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.15.1"
  },
  "description": "Projeto de estudos de NodeJs com Docker, Prisma e PostgreSQL",
  "main": "index.js",
  "scripts": {
    "dev": "set NODE_ENV=dev&& tsx watch src/server.ts",
    "build": "tsup src --out-dir build ",
    "start": "set NODE_ENV=production&&  node build/server.cjs",
    "commit": "cz",
    "lint": "eslint --fix src/**/*.ts",
    "format": "prettier --write .",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:deploy": "npx prisma migrate deploy && npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "db:migrate": "docker compose exec nodejs pnpm prisma:migrate",
    "db:generate": "docker compose exec nodejs pnpm prisma:generate",
    "db:seed": "docker compose exec nodejs pnpm prisma:seed",
    "db:studio": "docker compose exec nodejs pnpm prisma:studio",
    "docker:up": "docker compose up -d",
    "docker:stop": "docker compose stop",
    "test": "jest --passWithNoTests --maxWorkers=80% --runInBand --no-cache",
    "test:watch": "jest --watch",
    "test:watchAll": "jest --watchAll",
    "test:staged": "jest --findRelatedTests --passWithNoTests --runInBand --no-cache",
    "test:push": "jest --coverage --passWithNoTests --bail  --no-cache",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.ts --passWithNoTests --runInBand --no-cache",
    "test:e2e:watch": "jest --config jest.e2e.config.ts --watch --runInBand",
    "test:e2e:coverage": "jest --config jest.e2e.config.ts --coverage --runInBand",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "NathanRodriguesVieira99",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@prisma/client": "^6.10.1",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^5.0.1",
    "pino": "^9.7.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@eslint/json": "^0.12.0",
    "@faker-js/faker": "^9.8.0",
    "@swc/core": "^1.12.4",
    "@swc/jest": "^0.2.38",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.32",
    "@types/supertest": "^6.0.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "pino-pretty": "^13.0.0",
    "prettier": "3.5.3",
    "prisma": "^6.10.1",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
