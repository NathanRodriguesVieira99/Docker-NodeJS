{
  "name": "Docker NodeJS",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.15.1"
  },
  "description": "",
  "main": "index.js",
  "scripts": {
    "lets-code": "pnpm docker:up && pnpm dev",
    "dev": "set NODE_ENV=dev&& tsx watch src/server.ts",
    "build": "tsup src --out-dir build ",
    "start": "set NODE_ENV=production&& node build/server.cjs",
    "lint": "eslint --fix src/**/*.ts",
    "format": "prettier --write .",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:deploy": "npx prisma migrate deploy && npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "docker:up": "docker compose up -d",
    "docker:stop": "docker compose stop",
    "test": "jest --passWithNoTests --maxWorkers=80% --runInBand --no-cache",
    "test:watch": "jest --watch",
    "test:watchAll": "jest --watchAll",
    "test:staged": "jest --findRelatedTests --passWithNoTests --runInBand --no-cache",
    "test:push": "jest --coverage --passWithNoTests --bail  --no-cache",
    "test:coverage": "jest --coverage",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "NathanRodriguesVieira99",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.4.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@eslint/json": "^0.12.0",
    "@swc/core": "^1.12.1",
    "@swc/jest": "^0.2.38",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.31",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.1",
    "prettier": "3.5.3",
    "prisma": "^6.9.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  }
}
