# Exemplo de variáveis de ambiente

# ================================
# PARA AMBIENTE LOCAL
# ================================
# Copie este arquivo: Copy-Item .env.example .env

NODE_ENV=dev
HOST=0.0.0.0
PORT=3333

# PostgreSQL Local
POSTGRESQL_USERNAME=<usuario>
POSTGRESQL_PASSWORD=<senha>
POSTGRESQL_DATABASE=<database>
POSTGRESQL_PORT=5432
DATABASE_URL="postgresql://<usuario>:<senha>@localhost:5432/<database>?schema=public"

# Redis Local
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=<senha>

LOG_LEVEL=info

# ================================
# PARA AMBIENTE DOCKER
# ================================
# Use o arquivo .env.docker 
# Principais diferenças:
# - DATABASE_URL usa @postgresql:5432
# - REDIS_HOST=redis
